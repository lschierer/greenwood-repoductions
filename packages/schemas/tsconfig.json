{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": "./",
    "skipLibCheck": true
  },
  "exclude": ["**/node_modules/**", "dist"],
  "include": ["./**/*.ts"]
}
