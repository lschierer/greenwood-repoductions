{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "allowImportingTsExtensions": false,
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["src/shared/*"]
    }
  },
  "exclude": ["**/node_modules/**", "./dist/**"],
  "include": ["./**/*.ts", "./src/types/*.d.ts"]
}
