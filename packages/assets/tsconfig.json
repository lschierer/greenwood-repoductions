{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "noEmit": true,
    "composite": true,
    "allowImportingTsExtensions": true,
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["src/shared/*"]
    }
  },
  "exclude": ["**/node_modules/**"],
  "include": ["./**/*.ts", "./src/types/*.d.ts"]
}
